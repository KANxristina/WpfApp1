<UserControl x:Class="WpfApp1.Views.FirstView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views"            mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Name="label1" Content="{Binding Path=LabelText, Mode=OneWay}" HorizontalAlignment="Center" Margin="166,211,0,0" VerticalAlignment="Top" Height="49" Width="458" Foreground="{Binding Path=Color, Mode=OneWay}"/>
        <Button Name="btnNew" Content="new" HorizontalAlignment="Left" Margin="355,330,0,0" VerticalAlignment="Top" Height="29" Width="69" Click="btnNew_Click"/>
        <TextBlock Text="{Binding Path=IsTrue,Mode=TwoWay}" Name="txtIsTrue"  HorizontalAlignment="Left" Margin="322,375,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="68" Height="17"/>
        <TextBlock Text="{Binding Path=Color,Mode=TwoWay}" Name="txtText" HorizontalAlignment="Left" Margin="400,376,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" RenderTransformOrigin="-1.236,-0.27"/>



    </Grid>
</UserControl>
